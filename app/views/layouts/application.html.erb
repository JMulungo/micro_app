<!DOCTYPE html>
<html>
<head>
  <title>MicroApp</title>
  <%= stylesheet_link_tag "style" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<!--[if lt IE 9]>
<script src="http://html5shim.googlecode/svn/trunk/html5.js" type="text/javascript"></script>
<![endif]-->

<body>
<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <a class="brand" href="#"><div id="logo"><%= image_tag("twitter.png", :alt => "Micro-Twitter", :width => 25) %>Micro-Twitter</div></a>



    <ul class="nav">

      <li class="<%= 'active' if current_page?(user_sessions_new_path) %>">
        <% if @user.present? %>
        <%= link_to 'Sign in', user_sessions_new_path %> 
        <% else  %>
        <%= link_to 'Profile', user_sessions_new_path %>
        <% end %>
      </li>

      <li class="<%= 'active' if (current_page?(new_user_path) or current_page?(root_path)) %>">
      <% if @user.present? %>
      <%= link_to 'Sign up', new_user_path %>
      <% else %> 
      <%= link_to 'Sign out', new_user_path %>
      <% end %>
    </li>
    </ul>


  </div>
</div>

<% current_user.present? %>

<center>
<div class="container">
  <div class="row">
    <div class="span9"><%= yield %></div>
  </div>
</div>
</center>

</body>
</html>