
<h2>Sign in</h2>	<br>
<%= form_for [@user_session], :html => { :class => 'form-inline' }, :as => :user_session, :url => { :action => "create" } do |f| %>
   <%= render "shared/error_messages", :target => @user_session %>


      <div class="control-group">
        <%= f.label :email, :class => "control-label", :for => "inputEmail" %><br />
        <div class="controls"> 
        <%= f.text_field :email, :class => "input-xlarge" , :id=> "inputEmail", :placeholder => "email" %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password, :class => "control-label", :for => "inputPassword" %><br />
        <div class="controls"> 
        <%= f.text_field :password, :class => "input-xlarge" , :id=> "inputPassword", :placeholder => "password" %>
        </div>
      </div>

  <%= f.check_box :remember_me %><%= f.label :remember_me, :class => "checkbox"  %><br />
  <br />
  <button type="submit" class="btn btn-primary">
  <i class="icon-user icon-white"></i> Sign in
</button>
<!-- 
  <%= f.submit "Login" %>
-->

<% end %>
