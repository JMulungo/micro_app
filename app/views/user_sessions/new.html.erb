
<h2>Sign in</h2>	<br><hr>
<%= form_for [@user_session], :html => { :class => 'form-inline' }, :as => :user_session, :url => { :action => "create" } do |f| %>
   <%= render "shared/error_messages", :target => @user_session %>


      <div class="control-group">
        <%= f.label :email, :class => "control-label", :for => "inputEmail" %>
        <div class="controls"> 
        <%= f.text_field :email, :class => "input-xlarge" , :id=> "inputEmail", :placeholder => "Enter email" %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password, :class => "control-label", :for => "inputPassword" %>
        <div class="controls"> 
        <%= f.password_field :password, :class => "input-xlarge" , :id=> "inputPassword", :placeholder => "Enter password" %>
        </div>
      </div>

  <%= f.check_box :remember_me %><%= f.label :remember_me, :class => "checkbox"  %><br />
  <br />

      <%= button_tag( :class => "btn btn-info") do %>
        Login <i class="icon-user icon-white"></i>
      <% end %>
<hr>
<% end %>
